@page
@model Web.Pages.RecipeInfoModel
@{
}
<style>
    body {
        background-color: #f8f9fa;
    }

    .recipe-container {
        background-color: #f8f9fa;
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .recipe-image {
        max-width: 100%;
        border-radius: 10px;
        transition: transform 0.3s ease-in-out;
    }

        .recipe-image:hover {
            transform: scale(1.05);
        }

    .recipe-details {
        padding-left: 30px;
    }

    h2 {
        color: #343a40;
    }

    .list-group-item {
        background-color: #f8f9fa;
        border: none;
        border-bottom: 1px solid #dee2e6;
    }

        .list-group-item:last-child {
            border-bottom: none;
        }
</style>
    

<div class="container recipe-container">
    <div class="row">
        <div class="col-md-6">
            <img class="recipe-image img-fluid rounded" id="recipeImage" src="@Model.Recipe.ImagePath" alt="Recipe Image">
        </div>
        <div class="col-md-6">
            <div class="recipe-details">
                <h2 class="mb-3">@Model.Recipe.Name</h2>
                <p class="lead"><strong>Ingredients:</strong></p>
                <ul class="list-group">
                    @foreach (var ingredient in Model.Recipe.Ingredients)
                    {
                        <li class="list-group-item">@ingredient</li>
                    }
                </ul>
                <p class="mt-3">
                    <strong>Description:</strong> @Model.Recipe.Description
                </p>
                <hr>
                <h4>Specifications</h4>
                <ul class="list-group">
                    <li class="list-group-item">Taste: Most People will not believe how tasty it is</li>
                    <li class="list-group-item">Healthy: Yes? Of course it is healthy! Duhh</li>
                    <li class="list-group-item">Size: Various sizes are available. Depends how hungty you are :)</li>
                    <li class="list-group-item">Plating: You can plate it in many different ways in order to suit you vision!</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Bootstrap JS (optional) -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.9.1/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

        