@page
@model Web.Pages.CreateAccountModel
@{
}

@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@ViewData["ErrorMessage"]</div>
}
<section class="vh-90">
    <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-md-8 col-lg-7 col-xl-6">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                     class="img-fluid" alt="Phone image">
            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                <form class="form-buttons" method="post" enctype="multipart/form-data">
                    <!-- First Name input -->
                    <div class="field">
                        <label class="form-label" for="form1Example13">First Name</label>
                        <input asp-for="RegisterUser.FirstName" id="form1Example13" class="form-control form-control-lg">
                        <span asp-validation-for="RegisterUser.FirstName"></span>
                    </div>
                    <!-- Last Name input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form1Example13">Last Name</label>
                        <input asp-for="RegisterUser.LastName" id="form1Example13" class="form-control form-control-lg">
                        <span asp-validation-for="RegisterUser.LastName"></span>
                    </div>

                    <!-- Phone Number input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form1Example13">Phone Number</label>
                        <input asp-for="RegisterUser.PhoneNumber" id="form1Example13" class="form-control form-control-lg">
                        <span asp-validation-for="RegisterUser.PhoneNumber"></span>
                    </div>
                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form1Example13">Email</label>
                        <input asp-for="RegisterUser.Email" type= "email" id="form1Example13" class="form-control form-control-lg">
                        <span asp-validation-for="RegisterUser.Email"></span>
                    </div>
                    <!-- Username input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form1Example13">Username</label>
                        <input asp-for="RegisterUser.Username"  id="form1Example13" class="form-control form-control-lg">
                        <span asp-validation-for="RegisterUser.Username"></span>
                    </div>
                    <!-- Password input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form1Example13">Password</label>
                        <input asp-for="RegisterUser.Password"  id="form1Example13" class="form-control form-control-lg">
                        <span asp-validation-for="RegisterUser.Password"></span>
                    </div>
                    <div class="form-group">
                        <label for="ProfilePicture">Profile Picture</label>
                        <input asp-for="RegisterUser.Image" type="file" class="form-control" id="file">
                        <span asp-validation-for="RegisterUser.Image"></span>
                    </div>
                    <!-- Submit button -->
                    <div class="text-center my-4">
                        <button type="submit" class="btn btn-primary btn-lg w-75">Create Account</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
