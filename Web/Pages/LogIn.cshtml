@page
@model LogInModel
@{
    ViewData["Title"] = "Log In";
}
@if (TempData.ContainsKey("Message"))
{
    <div class="alert alert-danger" id="messageBox">
        @TempData["Message"]
    </div>

    <script>
        setTimeout(function () {
            document.getElementById('messageBox').style.display = 'none';
        }, 5000);
    </script>
}
@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@ViewData["ErrorMessage"]</div>

}

<section class="vh-90">
    <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-md-8 col-lg-7 col-xl-6">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                     class="img-fluid" alt="Phone image">
            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                <form class="form-buttons" method="post">
                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form1Example13">Username</label>
                        <input asp-for="@Model.User.Username" id="form1Example13" class="form-control form-control-lg" />
                        <span asp-validation-for="@Model.User.Username"></span>
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form1Example23">Password</label>
                        <input asp-for="@Model.User.Password" type="password" id="form1Example23" class="form-control form-control-lg" />
                        <span asp-validation-for="@Model.User.Password"></span>
                    </div>

                    <div class="d-flex justify-content-around align-items-center mb-4">
                        <!-- Checkbox -->
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="form1Example3" checked />
                            <label class="form-check-label" for="form1Example3"> Remember me </label>
                        </div>
                        <a href="#!">Forgot password?</a>
                    </div>

                    <!-- Submit button -->
                    <div class="text-center my-4">
                        <button type="submit" class="btn btn-primary btn-lg w-75">Log in</button>
                    </div>

                    <div class="divider d-flex align-items-center my-4">
                        <p class="text-center fw-bold mx-3 mb-0 text-muted">OR</p>
                    </div>

                    <div class="text-center my-4">
                        <a class="btn btn-primary btn-lg w-75" asp-area="" asp-page="/CreateAccount">Create Acoount</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<style>
    .divider:after,
    .divider:before {
        content: "";
        flex: 1;
        height: 1px;
        background: #eee;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
 }
